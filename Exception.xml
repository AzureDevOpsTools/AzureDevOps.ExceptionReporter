      <FIELD name="MessageEx" refname="Osiris.Exception.MessageEx" type="PlainText">
        <HELPTEXT>A message that describes the Exception</HELPTEXT>
      </FIELD>
      <FIELD name="Project Reference" refname="KM.Simulation.Projects" type="String" reportable="dimension">
