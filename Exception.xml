      </FIELD>
      <FIELD name="Proposed Fix" refname="Microsoft.VSTS.CMMI.ProposedFix" type="HTML" />
      <FIELD name="Root Cause" refname="Microsoft.VSTS.CMMI.RootCause" type="String">
        <DEFAULT from="value" value="Unknown" />
        <ALLOWEDVALUES expanditems="true">
          <LISTITEM value="Coding Error" />
          <LISTITEM value="Communication Error" />
          <LISTITEM value="Design Error" />
          <LISTITEM value="Specification Error" />
          <LISTITEM value="Unknown" />
        </ALLOWEDVALUES>
      </FIELD>
      <FIELD name="How Found" refname="Microsoft.VSTS.CMMI.HowFound" type="String" />
      <FIELD name="Comment" refname="Osiris.Comment" type="PlainText" />
      <FIELD name="Stack Trace" refname="Osiris.Exception.StackTrace" type="PlainText" />
      <FIELD name="Source" refname="Osiris.Exception.Source" type="String" />
      <FIELD name="Class Name" refname="Osiris.Exception.ClassName" type="String" />
      <FIELD name="Message" refname="Osiris.Exception.Message" type="String">
        <HELPTEXT>A message that describes the Exception</HELPTEXT>
      </FIELD>
      <FIELD name="Type" refname="Osiris.Exception.Type" type="String" />
      <FIELD name="Code Module" refname="Osiris.Code.Module" type="String" />
      <FIELD name="Exception Method Name" refname="Osiris.Exception.MethodName" type="String" />
      <FIELD name="StackChecksum" refname="Osiris.Exception.StackChecksum" type="Integer" />
      <FIELD name="Exception Reporter" refname="Osiris.Exception.ExceptionReporter" type="String" />
      <FIELD name="Build Version" refname="Osiris.Exception.BuildVersion" type="String" reportable="dimension" />
      <FIELD name="Incident Count" refname="Osiris.Exception.IncidentCount" type="Integer" reportable="measure" formula="sum" />
      <FIELD name="Application" refname="Osiris.Application" type="String">
        <HELPTEXT>The name of the main application (not the assembly) from where this exception where reported. Should match second level of the Area (after team project name)</HELPTEXT>
      </FIELD>
